{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "status": { "type": "string", "enum": ["success"] },
    "message": {
      "type": "object",
      "patternProperties": {
        "^[a-z]+$": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "required": ["message", "status"]
}